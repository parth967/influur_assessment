{
  "data_sources": {
    "creators_file": "/opt/airflow/data/creators (1).csv",
    "videos_file": "/opt/airflow/data/videos (1).csv"
  },
  "output": {
    "directory": "/opt/airflow/output",
    "delta_base_path": "/opt/airflow/output/delta_tables",
    "reports": "/opt/airflow/output/reports"
  },
  "logging": {
    "level": "INFO",
    "file": "/opt/airflow/logs/pipeline.log",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  },
  "data_quality": {
    "max_missing_percentage": 20,
    "required_columns": {
      "creators": ["creator_id", "username"],
      "videos": ["video_id", "creator_id", "views"]
    }
  },
  "analysis": {
    "top_n_creators": 10,
    "engagement_metrics": ["likes", "comments", "shares"],
    "performance_thresholds": {
      "high_engagement_rate": 0.15,
      "viral_view_threshold": 200000
    }
  }
}